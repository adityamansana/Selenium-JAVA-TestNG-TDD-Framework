package com.soltech.tests;

import org.apache.log4j.Logger;
import org.testng.Assert;
import org.testng.annotations.Test;

import com.soltech.base.BaseClass;
import com.soltech.pages.LandingPage;


public class LandingPageTest extends BaseClass{
	
	public static final Logger log = Logger.getLogger(LandingPageTest.class.getName());
	LandingPage landingpage;
	
	@Test
	public void qaCareers() throws Exception {
		landingpage = new LandingPage(driver);
		Assert.assertEquals(landingpage.isPageTitle(),true);
		landingpage.clickCareersMenu();
		landingpage.clickOpenPositionsMenu();
	}
	
}
