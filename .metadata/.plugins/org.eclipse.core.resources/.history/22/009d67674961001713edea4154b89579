package com.soltech.tests;

import java.util.ArrayList;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;
import org.testng.annotations.Test;

public class Login {
	
	WebDriver driver = new ChromeDriver();
	
	@Test
	public void loginTest() throws InterruptedException {
		
		driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
		driver.manage().window().setSize(new Dimension(1814, 974));
		driver.get("http://soltech.net/");
		Actions action = new Actions(driver);
		WebElement career = driver.findElement(By.cssSelector("#navbar > div > ul > li:nth-child(5) > a"));
		action.moveToElement(career).build().perform();
		Thread.sleep(5000L);

	    String parentTab = driver.getWindowHandle();

		WebElement openPositions = driver.findElement(By.cssSelector("#navbar > div > ul > li:nth-child(5) > ul > li:nth-child(2) > a"));
		action.moveToElement(openPositions).click().build().perform();
		Thread.sleep(3000L);
		 	 
	    ArrayList<String> newTab = new ArrayList<String>(driver.getWindowHandles());
	    newTab.remove(parentTab);
	    // change focus to new tab
	    driver.switchTo().window(newTab.get(0));	 
	    Thread.sleep(3000L);
	    driver.manage().window().maximize();
	    JavascriptExecutor jse = (JavascriptExecutor)driver;
	    jse.executeScript("scrollBy(0,2500)");
//	    Thread.sleep(3000L);
	    driver.findElement(By.cssSelector("input#jsb_f_keywords_i.Field_SearchKeywords.iCIMS_RoundedInput")).click();
		driver.findElement(By.cssSelector("input#jsb_f_keywords_i.Field_SearchKeywords.iCIMS_RoundedInput")).sendKeys("QA");
		driver.findElement(By.xpath(".//*[@id='jsb_form_submit_i']")).click();
		Thread.sleep(5000L);
		driver.close();
		driver.quit();
	}
	
	@Test
	public void method2() throws InterruptedException{
		driver.get("https://careers-soltech.icims.com/jobs/search?ss=1&searchKeyword=&searchCategory=&searchZip=&searchRadius=20");
		driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
		driver.manage().window().maximize();
		JavascriptExecutor jse = (JavascriptExecutor) driver;
		jse.executeScript("scrollBy(0,2500)");
//		WebDriverWait wait = new WebDriverWait(driver, 30);
//		wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath(".//*[@id='jsb_form_submit_i']")));
//		driver.findElement(By.xpath("//*[@name='searchKeyword'][@id='jsb_f_keywords_i']")).clear();
//		driver.findElement(By.xpath("//*[@name='searchKeyword'][@id='jsb_f_keywords_i']")).click();
//		driver.findElement(By.cssSelector("input#jsb_f_keywords_i.Field_SearchKeywords.iCIMS_RoundedInput")).sendKeys("QA");
//		driver.findElement(By.xpath("//*[@id='jsb_form_submit_i']")).submit();
		driver.findElement(By.id("jsb_f_keywords_i")).sendKeys("QA");
	    driver.findElement(By.id("jsb_form_submit_i")).click();
		Thread.sleep(5000L);			
	}
	
	
	@Test
	  public void testSoltech() throws Exception {
		driver.get("http://soltech.net");
	    driver.findElement(By.cssSelector("span.cd-menu-text")).click();
	    driver.findElement(By.xpath("(//a[contains(text(),'Open Positions')])[2]")).click();
	    // ERROR: Caught exception [ERROR: Unsupported command [selectWindow | name=icims_content_iframe | ]]
	    driver.findElement(By.id("jsb_f_keywords_i")).clear();
	    driver.findElement(By.id("jsb_f_keywords_i")).sendKeys("QA");
	    driver.findElement(By.id("jsb_f_keywords_i")).clear();
	    driver.findElement(By.id("jsb_f_keywords_i")).sendKeys("QA");
	    driver.findElement(By.id("jsb_form_submit_i")).click();
	    driver.findElement(By.id("jsb_form_submit_i")).click();
	  }
}